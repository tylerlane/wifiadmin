<% @page_title = @ip.ip_address %>
<div align="center">
<br />
<h2> <%= @ip.ip_address %></h2>
<br />
<table class="list" width="350">
    <tr>
        <td class="listheader">IP Address</td>
        <td class="list"><%= @ip.ip_address %></td>
    </tr>
    <tr>
        <td class="listheader">Subnet Mask</td>
        <td class="list"><%= @ip.subnet %></td>
    </tr>
    <tr>
        <td class="listheader">Mac Address</td>
        <td class="list"><%=@ip.mac_address %></td>
    </tr>
    <tr>
        <td class="listheader">Name</td>
        <td class="list"><%=@ip.name %></td>
    </tr>
    <tr>
        <td class="listheader">Device Type</td>
        <td class="list"><%=@ip.device_type %></td>
    </tr>    
    <tr>
        <td class="listheader">SSID</td>
        <td class="list"><%=@ip.ssid %></td>
    </tr>
    <tr>
        <td class="listheader">Channel</td>
        <td class="list"><%=@ip.channel %></td>
    </tr>
    <tr>
        <td class="list">&nbsp;</td>
        <td class="list">&nbsp;</td>
    </tr>
    <tr>
        <td class="listheader">Network Name</td>
        <td class="list"><%=h @network.net_name %></td>
    </tr>
    <tr>
        <td class="list">&nbsp;</td>
        <td class="list">&nbsp;</td>
    </tr>
    <tr>
        <td class="listheader">Created On</td>
        <td class="list"><%=h @ip.created_at.strftime("%B %d, %Y at %I:%M %p") %>
    <tr>
        <td class="listheader">Last Updated</td>
        <td class="list"><%=h time_ago_in_words( @ip.updated_at ) %></td>
    </tr>
</table>
<br />

<%= link_to 'Edit', :controller => "ips", :action => "edit", :id=> @ip.id, :network_id => @ip.network_id %> |
<%= link_to 'Back', { :action => "index", :network_id => @ip.network_id} %>
<br />
<br />
</div>

